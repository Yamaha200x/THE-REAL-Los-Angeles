<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FiveM Server Console</title>
</head>
<body>
    <h1>FiveM Server Console</h1>
    <pre id="console"></pre>

    <script>
        async function fetchConsoleLog() {
            try {
                const response = await fetch('http://fivem-server-ip:3000/logs'); // Passe die URL an
                const data = await response.json();

                if (data.error) {
                    console.error(data.error);
                } else {
                    document.getElementById('console').textContent = data.log;
                }
            } catch (error) {
                console.error('Fehler beim Abrufen der Server-Konsole:', error);
            }
        }

        // Aktualisiere die Konsole alle 5 Sekunden (oder nach Bedarf)
        setInterval(fetchConsoleLog, 5000); // Alle 5 Sekunden aktualisieren
        fetchConsoleLog(); // Initialen Abruf ausf√ºhren
    </script>
</body>
</html>
